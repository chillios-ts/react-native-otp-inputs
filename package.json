{
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "bugs": "https://github.com/dsznajder/react-native-otp-inputs/issues",
  "contributors": [
    "Micha≈Ç Kantor <kantorm96@gmail.com>"
  ],
  "description": "One-time password inputs built in pure JS for React-Native",
  "homepage": "https://github.com/dsznajder/react-native-otp-inputs",
  "license": "MIT",
  "name": "react-native-otp-inputs",
  "repository": "https://github.com/dsznajder/react-native-otp-inputs",
  "version": "3.2.0",
  "main": "lib/module/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project ./tsconfig.json",
    "typescript": "tsc --noEmit",
    "release": "release-it",
    "test": "jest --updateSnapshot",
    "test:ci": "jest --collectCoverage=true",
    "test:watch": "jest --watch",
    "prepare": "yarn clean && bob build"
  },
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "peerDependencies": {
    "react-native": ">= 0.57.0 < 1"
  },
  "jest": {
    "bail": true,
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "@react-native-community/bob": "0.5.0",
    "@types/jest": "24.0.15",
    "@types/react": "16.8.22",
    "@types/react-native": "0.57.63",
    "@types/react-test-renderer": "16.8.2",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "metro-react-native-babel-preset": "0.54.1",
    "react": "16.8.3",
    "react-native": "0.59.9",
    "react-test-renderer": "16.8.3",
    "release-it": "12.3.0",
    "rimraf": "2.6.3",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typescript"
    }
  },
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ]
  }
}
