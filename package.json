{
  "name": "react-native-otp-inputs",
  "version": "5.0.0-alpha.0",
  "description": "One-time password inputs built in pure JS for React-Native",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "bootstrap": "yarn example && yarn",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "repository": "https://github.com/dsznajder/react-native-otp-inputs",
  "author": " Damian Sznajder <damsznajder@gmail.com>, Michal Kantor <kantorm96@gmail.com>",
  "license": "MIT",
  "keywords": [
    "otp",
    "react-native",
    "one-time-password",
    "inputs"
  ],
  "devDependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-typescript": "7.8.3",
    "@react-native-community/bob": "0.9.7",
    "@types/jest": "25.1.3",
    "@types/react": "16.9.23",
    "@types/react-native": "0.61.17",
    "@types/react-test-renderer": "16.9.2",
    "babel-jest": "25.1.0",
    "codecov": "3.6.5",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-satya164": "3.1.5",
    "github-release-notes": "0.17.1",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "metro-react-native-babel-preset": "0.58.0",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-keyevent": "0.2.7",
    "react-test-renderer": "16.12.0",
    "release-it": "12.6.2",
    "typescript": "3.8.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/node_modules",
      "<rootDir>/lib/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
