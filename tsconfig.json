{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./lib",
    "declaration": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "filesGlob": ["lib/*.tsx", "lib/*.ts"],
  "exclude": ["android", "__tests__", "ios", "build", "node_modules"],
  "compileOnSave": false
}
